{
  "$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 80,
    "attributePosition": "auto",
    "formatWithErrors": false,
    "useEditorconfig": true,
    "includes": [
      "**",
      "!**/node_modules",
      "!**/.next",
      "!**/dist",
      "!**/build",
      "!**/public"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "a11y": {
        "recommended": true,
        "noStaticElementInteractions": "error",
        "useAriaPropsSupportedByRole": "error",
        "useValidAutocomplete": "error"
      },
      "complexity": {
        "noUselessEscapeInRegex": "error",
        "noUselessStringRaw": "error"
      },
      "correctness": {
        "recommended": true,
        "noUnusedFunctionParameters": "error",
        "noUnusedImports": "error",
        "noUnusedPrivateClassMembers": "error",
        "noUnusedVariables": "error",
        "useHookAtTopLevel": "error",
        "useExhaustiveDependencies": "warn",
        "noMissingVarFunction": "error",
        "noUnknownPseudoClass": "error",
        "noUnknownPseudoElement": "error",
        "noUnknownTypeSelector": "error"
      },
      "nursery": {
        "useSortedClasses": {
          "level": "error",
          "options": {
            "attributes": ["classList"],
            "functions": ["clsx", "cva", "tw"]
          }
        }
      },
      "performance": {
        "recommended": true,
        "noBarrelFile": "error",
        "noReExportAll": "error",
        "useTopLevelRegex": "error",
        "noDynamicNamespaceImportAccess": "error",
        "noImgElement": "error",
        "noNamespaceImport": "error"
      },
      "security": {
        "recommended": true,
        "noSecrets": "error"
      },
      "style": {
        "recommended": true,
        "noDefaultExport": "error",
        "noDoneCallback": "error",
        "noNamespace": "error",
        "noParameterProperties": "error",
        "noRestrictedGlobals": "error",
        "noShoutyConstants": "error",
        "noYodaExpression": "error",
        "useAsConstAssertion": "error",
        "useBlockStatements": "error",
        "useCollapsedElseIf": "error",
        "useConsistentArrayType": "error",
        "useConsistentBuiltinInstantiation": "error",
        "useDefaultSwitchClause": "error",
        "useExplicitLengthCheck": "error",
        "useForOf": "error",
        "useFragmentSyntax": "error",
        "useShorthandAssign": "error",
        "useThrowNewError": "error",
        "useThrowOnlyError": "error",
        "useImportType": "off",
        "useNamingConvention": {
          "level": "error",
          "options": {
            "strictCase": true,
            "requireAscii": true
          }
        },
        "useFilenamingConvention": {
          "level": "error",
          "options": {
            "strictCase": true,
            "requireAscii": true,
            "filenameCases": ["kebab-case"]
          }
        },
        "useArrayLiterals": "error",
        "noCommonJs": "error",
        "noDescendingSpecificity": "error",
        "noEnum": "error",
        "noExportedImports": "error",
        "noHeadElement": "error",
        "noNestedTernary": "error",
        "noProcessEnv": "error",
        "noSubstr": "error",
        "noValueAtRule": "error",
        "useAtIndex": "error",
        "useCollapsedIf": "error",
        "useComponentExportOnlyModules": "error",
        "useConsistentCurlyBraces": "error",
        "useDeprecatedReason": "error",
        "useTrimStartEnd": "error",
        "useConsistentMemberAccessibility": {
          "level": "error",
          "options": {
            "accessibility": "explicit"
          }
        }
      },
      "suspicious": {
        "recommended": true,
        "noConsole": "error",
        "noEmptyBlockStatements": "error",
        "noEmptyInterface": "error",
        "noEvolvingTypes": "error",
        "noExplicitAny": "error",
        "noMisplacedAssertion": "error",
        "noSkippedTests": "error",
        "noSparseArray": "error",
        "useErrorMessage": "error",
        "useNumberToFixedDigitsArgument": "error",
        "noDocumentCookie": "error",
        "noDocumentImportInPage": "error",
        "noDuplicateCustomProperties": "error",
        "noDuplicateElseIf": "error",
        "noDuplicateProperties": "error",
        "noHeadImportInDocument": "error",
        "noIrregularWhitespace": "error",
        "noOctalEscape": "error",
        "noTemplateCurlyInString": "error",
        "useAdjacentOverloadSignatures": "error",
        "useGoogleFontDisplay": "error",
        "useGuardForIn": "error",
        "useStrictMode": "error"
      }
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "javascript": {
    "formatter": {
      "arrowParentheses": "always",
      "semicolons": "always",
      "bracketSameLine": false,
      "bracketSpacing": true,
      "trailingCommas": "none",
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "attributePosition": "auto"
    },
    "globals": ["React", "JSX"]
  },
  "json": {
    "formatter": {
      "enabled": true,
      "trailingCommas": "none"
    },
    "parser": {
      "allowTrailingCommas": false
    },
    "linter": {
      "enabled": true
    }
  },
  "overrides": [
    {
      "includes": []
    },
    {
      "includes": ["**/github-api.ts"],
      "linter": {
        "rules": {
          "style": {
            "useNamingConvention": {
              "level": "error",
              "options": {
                "strictCase": true,
                "requireAscii": true,
                "conventions": [
                  {
                    "selector": {
                      "kind": "typeMember"
                    },
                    "formats": ["snake_case"]
                  },
                  {
                    "selector": {
                      "kind": "objectLiteralProperty"
                    },
                    "formats": ["CONSTANT_CASE"]
                  }
                ]
              }
            }
          }
        }
      }
    },
    {
      "includes": ["**/env.ts"],
      "linter": {
        "rules": {
          "style": {
            "useNamingConvention": {
              "level": "error",
              "options": {
                "strictCase": true,
                "requireAscii": true,
                "conventions": [
                  {
                    "selector": {
                      "kind": "objectLiteralProperty"
                    },
                    "formats": ["camelCase", "CONSTANT_CASE"]
                  }
                ]
              }
            },
            "noProcessEnv": {
              "level": "off"
            }
          },
          "nursery": {}
        }
      }
    },
    {
      "includes": ["**/sidebar.tsx"],
      "linter": {
        "rules": {
          "nursery": {},
          "security": {
            "noSecrets": {
              "level": "off",
              "options": {
                "entropyThreshold": 0
              }
            }
          }
        }
      }
    },
    {
      "includes": ["**/tailwind.config.ts"],
      "linter": {
        "rules": {
          "style": {
            "useNamingConvention": {
              "level": "error",
              "options": {
                "strictCase": true,
                "requireAscii": true,
                "conventions": [
                  {
                    "selector": {
                      "kind": "typeMember"
                    },
                    "formats": ["snake_case"]
                  },
                  {
                    "selector": {
                      "kind": "objectLiteralProperty"
                    },
                    "formats": ["CONSTANT_CASE", "camelCase"]
                  }
                ]
              }
            }
          }
        }
      }
    }
  ]
}
